{
  "private": true,
  "workspaces": [
    "starters/*",
    "themes/*"
  ],
  "name": "gatsby-theme-darsh-root",
  "devDependencies": {
    "@testing-library/cypress": "^7.0.1",
    "axe-core": "^4.1.0",
    "cypress": "^5.6.0",
    "cypress-axe": "^0.10.0",
    "gatsby-cypress": "^0.11.0",
    "lerna": "^3.22.1",
    "start-server-and-test": "^1.11.6"
  },
  "scripts": {
    "develop:darsh": "yarn workspace gatsby-starter-darsh develop",
    "build:darsh": "yarn workspace gatsby-starter-darsh build",
    "serve:darsh": "yarn workspace gatsby-starter-darsh serve",
    "clean:darsh": "yarn workspace gatsby-starter-darsh clean",
    "test:darsh": "start-server-and-test develop:darsh http://localhost:8000 cy:open",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  }
}
